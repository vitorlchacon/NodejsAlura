<!DOCTYPE html>
<html>
	<head>
		<title></title>
	</head>
	<body>
		<div class="erros">
			<%if(errosValidacao){%>
				<ul>
					<%for(var i=0; i < errosValidacao.length; i++){ %>
						<li>
							<%=errosValidacao[i].param%> - <%=errosValidacao[i].msg%>  
						</li>
					<%}%>
				</ul>
			<%}%>
		</div>
		<form action="/produtos" method="POST">
			<div>
				<label for="titulo">Título</label>
				<input type="text" id="titulo" value="<%=produto.titulo%>" name="titulo" placeholder="Título do livro">
			</div>
			<div>
				<label for="descricao">Descrição</label>
				<textarea cols="50" rows="10" id="descricao" name="descricao" placeholder="Descrição do livro"><%=produto.descricao%></textarea>
			</div>
			<div>
				<label for="preco">Preço</label>
				<input type="text" id="preco" value="<%=produto.preco%>" name="preco" placeholder="Peço do livro">
			</div>
			<input type="submit" value="gravar"/>
		</form>
	</body>
</html>